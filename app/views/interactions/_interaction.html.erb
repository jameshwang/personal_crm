<div id="interaction_<%= interaction.id %>" class="flex items-center justify-between">
  <div class="flex-1">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <% icon_class = case interaction.interaction_type.downcase
           when 'call'
             'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'
           when 'email'
             'M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
           when 'meeting'
             'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z'
           else # video call or other
             'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z'
           end %>
        <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-indigo-100">
          <svg class="h-5 w-5 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_class %>" />
          </svg>
        </span>
      </div>
      <div class="ml-4">
        <h4 class="text-sm font-medium text-gray-900"><%= interaction.interaction_type %></h4>
        <div class="mt-1 text-xs text-gray-500">
          <%= interaction.date.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>
    <% if interaction.notes.present? %>
      <div class="mt-2 text-sm text-gray-600">
        <%= interaction.notes %>
      </div>
    <% end %>
  </div>
  <div>
    <%= button_to contact_interaction_path(@contact, interaction),
                  method: :delete,
                  class: "text-gray-400 hover:text-gray-500",
                  title: "Delete interaction",
                  data: { turbo_confirm: "Are you sure you want to delete this interaction?" } do %>
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div> 